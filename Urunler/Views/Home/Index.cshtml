@using Urunler.Models;


@{
    ViewBag.Title = "Index";
}

<h2>Ürünler</h2>
<div class="alert alert-succes" role="alert">
    <strong>@ViewBag.UrunSayisi</strong>  adet ürün sıralandı.

</div>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            @foreach (var kategori in (List<Kategori>)ViewBag.Kategori)
            {
                <a href="#" class="list-group-item">@kategori.KategoriAdi</a>

            }


        </div>
    </div>

    <div class="col-md-9">
        @foreach (var urun in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="http://via.placeholder.com/250x150" alt="">
                    <div class="caption">
                        <h3>@urun.UrunAdi</h3>
                        <p>@urun.UrunAciklama</p>
                        <p>@urun.Fiyat</p>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">Satın Al</a>
                            <a href="#" class="btn btn-default" role="button">İncele</a>
                        </p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


